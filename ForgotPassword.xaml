<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DzalekaNotifierFinal.ForgotPassword"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="backgroungImage" Opacity="0.3" Aspect="Fill" />
            
            <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
                <Image HeightRequest="100" WidthRequest="100" HorizontalOptions="CenterAndExpand" x:Name="icon" Margin="0,0,0,20"/>
                <Entry x:Name="password" Placeholder="Enter The New Password"/>
                 <Entry x:Name="confirmpassword" Placeholder="Confirm Password"/>
                <Button x:Name="Submit" Text="Change Password" Clicked="Submit_Clicked"  FontAttributes="Bold" BackgroundColor="#4c466c" TextColor="White"/>
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>