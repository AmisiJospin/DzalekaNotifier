<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DzalekaNotifierFinal.Offices"
            Title="Offices">
    <ContentPage.Content>
        <Grid>

            <Image x:Name="backgroundImage" Opacity="0.30" Aspect="Fill" />

            <StackLayout>
                <ScrollView>
                    <StackLayout x:Name="stackContainer" Margin="5">

                        <ScrollView x:Name="scrollContent">

                        </ScrollView>

                    </StackLayout>
                </ScrollView>
         
            </StackLayout>


            <ActivityIndicator x:Name="loadingImage" HeightRequest="30" WidthRequest="30" Color="#4c466c" IsVisible="False" IsRunning="False" HorizontalOptions="CenterAndExpand" />

        </Grid>
    </ContentPage.Content>
</ContentPage>